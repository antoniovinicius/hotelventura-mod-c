<%- include('inc/header') -%>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Logs
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Logs</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">

    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Lista</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body no-padding">
            <table class="table table-striped" id="grid">
                <tbody>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Log</th>
                        <th>Timestamp do Log</th>
                        <th style="min-width: 75px;">Ações</th>
                    </tr>
                    <% data.forEach(function(row){ %>
                    <tr data-row="<%= JSON.stringify(row) %>">
                        <td><%= row.id_log_reserva %></td>
                        <td><%= row.texto_log %></td>
                        <td><%= row.data_registro %></td>
                        <td><button type="button" class="btn btn-xs btn-danger btn-delete"><i class="fa fa-trash"></i> Excluir</button></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

<%- include('inc/footer') -%>

<script src="/js/formsave.js"></script>
<script src="/js/grid.js"></script>
<script>

    new Grid({
        id: 'grid',
        urlDelete: '/admin/logs/${data.id_log_reserva}',
        textDeleteConfirm: 'Deseja realmente excluir o log de id ${data.id_log_reserva}?'
    });

</script>