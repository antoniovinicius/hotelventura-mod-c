<%- include('page-header') -%>

	<div class="gtco-section">
		<div class="gtco-container">
			<div class="row">
				<div class="col-md-12">
					<div class="col-md-6 animate-box">
						<% if (typeof success==='string' ) { %>
							<div class="alert alert-success" role="alert">
								<%=success%>
							</div>
						<% } %>
						<% if (typeof error==='string') { %>
							<div class="alert alert-danger" role="alert">
								<strong>Ops!</strong>
								<%=error%>
							</div>
						<% } %>
						<% if (fail) { %>
							<div class="alert alert-danger" role="alert">
								<strong>Ops!</strong><span> Usuário e/ou senha inválidos!</span>
							</div>
						<% } %>
						<% if (failgoogle) { %>
							<div class="alert alert-danger" role="alert">
								<strong>Ops!</strong><span> Login pelo Google apresenta problemas, tente mais tarde!</span>
							</div>
						<% } %>
						<% if (cadastro) { %>
							<div class="alert alert-success" role="alert">
								<span>Cadastro realizado com sucesso! Favor realizar login!</span>
							</div>
						<% } %>


						<h3>Login</h3>
						<form action="/login" method="POST">
							<div class="row form-group">
								<div class="col-md-12">
									<label class="sr-only" for="email">E-mail</label>
									<input type="text" name="email" id="email" class="form-control"
										placeholder="E-mail para login" value="<%=body.email%>" />
								</div>
							</div>
							<div class="row form-group">
								<div class="col-md-12">
									<label class="sr-only" for="email">Senha</label>
									<input type="password" name="senha" id="senha" class="form-control" placeholder="Senha"
										value="<%=body.senha%>" />
								</div>
							</div>
							<div class="form-group">
								<input type="submit" value="Logar" class="btn btn-primary" />
								<a href="/auth/google" class="btn btn-danger"><span class="fa fa-google"></span> Logar com
									Google</a>
							</div>
						</form>
						<span>Ainda não possui cadastro?</span><br/>

						<div class="mt-4">
							<h3 class="logintitle">Criar cadastro</h3>
							<form action="register" method="post" style="border-color: #66bfbf">

								<div class="row form-group">
									<div class="col-md-12">
										<label class="sr-only">Nome : </label>
										<input type="text" class="form-control" placeholder="Seu nome" name="name" required />
									</div>
								</div>
								<div class="row form-group">
									<div class="col-md-12">
										<label class="sr-only">Email : </label>
										<input type="text" class="form-control" placeholder="Seu email" name="uname" required />
									</div>
								</div>
								<div class="row form-group">
									<div class="col-md-12">
										<label class="sr-only">Password : </label>
										<input type="password" class="form-control" placeholder="Sua senha" name="pw"
											required />
									</div>
								</div>

								<div class="loginbutton">
									<button class="singlebutton btn btn-primary" type="submit">
										Registrar
									</button>
								</div>

							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<%- include('page-footer') -%>